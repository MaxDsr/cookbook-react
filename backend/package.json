{
  "name": "cookbook-backend",
  "version": "1.0.3",
  "type": "module",
  "description": "A boilerplate for Node.js apps / Rest API / Authentication from scratch - express, mongodb (mongoose).",
  "main": "./src",
  "nodeVersion": "24.11.0",
  "bugs": "https://github.com/watscho/express-mongodb-rest-api-boilerplate/issues",
  "keywords": [
    "express",
    "mongodb",
    "mongoose",
    "node",
    "nodejs",
    "authentication",
    "scratch",
    "boilerplate",
    "authorization",
    "docker",
    "api",
    "rest"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "nodemon",
    "build": "tsc && tsc-alias",
    "docker-bash": "docker exec -it cookbook-backend /bin/bash",
    "migrate-mongo-status": "migrate-mongo status",
    "migrate-mongo-up": "migrate-mongo up",
    "migrate-mongo-down": "migrate-mongo down",
    "seed-recipes": "npx tsx ./scripts/seedRecipes.ts",
    "upload-recipe-images": "npx tsx ./scripts/uploadRecipeImages.ts",
    "lint": "eslint --debug ./src",
    "lint:write": "eslint --debug ./src --fix",
    "prettier": "prettier \"**/*.+(js|jsx|json|css|md|ts)\"",
    "prettier:write": "prettier --write \"**/*.+(js|jsx|json|css|md|ts)\""
  },
  "author": "Watscho Aiwasov",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-serve-static-core": "^4.19.6",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-oauth2-jwt-bearer": "^1.6.0",
    "http-status-codes": "^2.3.0",
    "jwt-decode": "^4.0.0",
    "migrate-mongo": "^11.0.0",
    "minio": "^8.0.2",
    "mongoose": "^8.8.4",
    "multer": "^2.0.0",
    "uuid": "^11.0.3",
    "winston": "^3.17.0"
  }
}
